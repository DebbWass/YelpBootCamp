<% include ../partials/header %>
<div class= "row">
	<div class ="col-md-4" id="user_details">
		
		<h4><%= user.firstName + " " + user.lastName %></h4>
		<div class="thumbnail">
			<img src="<%= user.avatar %>" alt="user profile image">
			<div class = "caption">
				<a href="mailto: <%= user.email %>"><%= user.email %></a>
				<% if (currentUser.equals(user)){ %>
					<span>
						<a href="/users/<%=user.id%>/edit"><button class="btn btn-xs btn-primary" id="follow_btn">Edit</button></a>
					</span>
				<%} else{ %> 
					<span>
						<a href="/follow/<%= user.id %>"><button class="btn btn-xs btn-primary" id="follow_btn">Follow <%= user.username %></button></a>
					</span>

				<% } %>
					
			</div>
		</div>
		<div>
			<p>
				<%= user.aboutMe%>
			</p>
		</div>
	</div>
	<div class ="col-md-8" id="user_camps">
		<h3><%= user.firstName %>'s campgrounds %>	</h3>
		<div class= "row text-center" style="display:flex; flex-wrap: wrap;">
			<% campgrounds.forEach(function(campground){%>
			<div class ="col-md-3 col-sm-6">
				<div class = "img-thumbnail">
					<img style = "width : 100%;"src="<%= campground.image %>" >
					<div class = "caption">
						<h4><%= campground.name %></h4>
					</div>
					<p>
						<a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More Info</a>
					</p>
				</div>

			</div>
			<%})%>
	</div>
	</div>
	
	
</div>
<% include ../partials/footer %>